{
    "manifest_version": 3,
    "name": "Web Image Changer",
    "version": "0.1",
    "description": "Change images of a website using WIC extension",
    "permissions": ["storage", "scripting", "activeTab"],
    "action": {
        "default_popup": "main/popup.html"
    },
    "background": {
        "service_worker": "main/background.js"
    },
    "content_scripts": [
        {
          "matches": ["*://*/*"], 
          "js": ["./main/content.js"]
        }],
    "icons": {
        "48": "./main/logo48.png"
    }
}